{
	"manifest_version": 2,
	"name": "Hide Elo on Chess.com",
	"version": "0.11",
	"description": "An extension to hide Elo ratings on chess.com on all pages",
	"icons": {
		"48": "icon.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.chess.com/*", "*://lichess.org/*"],
			"js": ["content.js"],
			"css": ["styles.css"]
		}
	],
	"permissions": ["activeTab"],

	"browser_specific_settings": {
		"gecko": {
			"id": "extension@tylerholmes.ca",
			"strict_min_version": "120.0"
		}
	}
}
